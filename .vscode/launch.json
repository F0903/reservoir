{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Proxy with Defaults",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": [
        "--log-level",
        "DEBUG",
        "--log-to-stdout"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "build-frontend"
    },
    {
      "name": "Debug Proxy with Dashboard disabled",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "main.go",
      "args": [
        "--no-dashboard",
        "--log-level",
        "DEBUG",
        "--log-to-stdout"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Run Dashboard Dev Server",
      "cwd": "${workspaceFolder}/webserver/dashboard/frontend",
      "type": "node-terminal",
      "command": "pnpm run dev",
      "request": "launch"
    },
    {
      "name": "Launch Dashboard in Firefox",
      "type": "firefox",
      "request": "launch",
      "firefoxExecutable": "${env:FirefoxPath}",
      "url": "http://localhost:5173",
      "timeout": 120,
      "reAttach": true,
      "pathMappings": [
        {
          "url": "http://localhost:5173/src",
          "path": "${workspaceFolder}/webserver/dashboard/frontend/src"
        }
      ]
    }
  ],
  "compounds": [
    {
      "name": "Debug Dashboard",
      "configurations": [
        "Run Dashboard Dev Server",
        "Launch Dashboard in Firefox"
      ],
      "stopAll": true
    },
    {
      "name": "Debug Proxy + Dashboard",
      "configurations": [
        "Debug Proxy with Dashboard disabled",
        "Run Dashboard Dev Server",
        "Launch Dashboard in Firefox"
      ],
      "stopAll": true
    }
  ]
}
